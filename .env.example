# Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRE=7d

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@ai-teleradiology.com
ADMIN_EMAIL=admin@ai-teleradiology.com

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URLs
FRONTEND_URL=https://your-frontend-domain.vercel.app
CMS_URL=https://your-cms-domain.vercel.app

# API Keys (comma-separated)
VALID_API_KEYS=api_key_1,api_key_2,api_key_3

# Vite Environment Variables (for frontend)
VITE_API_URL=https://your-backend-domain.vercel.app/api