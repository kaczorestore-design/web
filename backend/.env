# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration
# DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_teleradiology
# POSTGRES_URI=postgresql://postgres:password@localhost:5432/ai_teleradiology
# Using SQLite for development (will auto-fallback if PostgreSQL not available)
DATABASE_URL=sqlite://database.sqlite

# JWT Configuration
JWT_SECRET=ai-teleradiology-super-secret-jwt-key-2024
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=ai-teleradiology-super-secret-refresh-key-2024
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for contact forms and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=contact@ai-teleradiology.com
EMAIL_PASS=demo-password
EMAIL_FROM=noreply@ai-teleradiology.com

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=ai-teleradiology
CLOUDINARY_API_KEY=demo-api-key
CLOUDINARY_API_SECRET=demo-api-secret

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/dicom

# Admin Configuration
ADMIN_EMAIL=admin@ai-teleradiology.com
ADMIN_PASSWORD=Admin123!@#

# API Keys (if needed for external services)
DICOM_SERVICE_API_KEY=demo-dicom-key
AI_ANALYSIS_API_KEY=demo-ai-key